{
  "name": "chain-mock",
  "version": "0.0.0",
  "description": "",
  "homepage": "https://github.com/madoos/chain-mock",
  "contributors": [
    {
      "name": "Maurice DomÃ­nguez",
      "email": "maurice.ronet.dominguez@gmail.com"
    },
    {
      "name": "Roberto Naharro",
      "email": "roberto.naharro@gmail.com"
    }
  ],
  "files": [
    "lib"
  ],
  "main": "./index.js",
  "keywords": [
    "proxy",
    "chain",
    "mock",
    "test",
    "structure",
    "metaproraming"
  ],
  "devDependencies": {
    "coveralls": "^3.0.2",
    "eslint": "^5.13.0",
    "prettier": "^1.15.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-config-xo": "^0.25.0",
    "jest": "^24.0.0",
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "conventional-changelog-cli": "^2.0.11",
    "prettier-eslint-cli": "^4.7.1",
    "http-server": "^0.11.1"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --single-quote --bracket-spacing true --print-width 80 --semi --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest --coverage",
    "tdd": "npm test -- --watch",
    "precommit": "lint-staged",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "serve:coverage": "http-server coverage/ -o"
  },
  "repository": "madoos/chain-mock",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/**/*.stories.*",
      "!<rootDir>/src/serviceWorker.js"
    ]
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
